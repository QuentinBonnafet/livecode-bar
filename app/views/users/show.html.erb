<div class="max-w-md mx-auto bg-white p-8 rounded shadow-md">
  <img src="<%= @user.get_picture %>" alt="User Image" class="w-full h-full object-cover mb-4 rounded">

  <div>
    <h1 class="text-2xl font-bold mb-2"><%= @user.name %></h1>
    <p class="text-gray-600 mb-4"><%= @user.present? ? 'Il sera présent au bar 🍻' : 'Malheureusement il ne sera pas parmis nous 😢' %></p>
    <p class="text-gray-700 mb-4"><%= @user.description %></p>
  </div>

  <div class="flex justify-between mt-4">
    <%= link_to 'Modifier', edit_user_path(@user), class: "bg-blue-500 text-white px-4 py-2 rounded hover:bg-blue-600" %>
    <%= button_to "Suprimer", user_path(@user), method: :delete, data: { confirm: "Are you sure?" }, class: "bg-red-500 text-white px-4 py-2 rounded hover:bg-red-600" %>
  </div>
</div>
