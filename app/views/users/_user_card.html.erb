
<div class="max-w-sm bg-white border <%= user.present? ? 'border-green-500' : 'border-gray-200' %> rounded-lg shadow dark:bg-gray-800 dark:border-gray-700 p-4 relative">
  <%= render 'badge' if user.present? %>
  <div class="flex justify-end px-4 pt-4">
    <%= link_to user_path(user), class: "inline-block text-gray-500 dark:text-gray-400 hover:bg-gray-100 dark:hover:bg-gray-700 focus:ring-4 focus:outline-none focus:ring-gray-200 dark:focus:ring-gray-700 rounded-lg text-sm p-1.5" do%>
      <span class="sr-only">Show user</span>
      <svg class="w-5 h-5" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 16 3">
        <path d="M2 0a1.5 1.5 0 1 1 0 3 1.5 1.5 0 0 1 0-3Zm6.041 0a1.5 1.5 0 1 1 0 3 1.5 1.5 0 0 1 0-3ZM14 0a1.5 1.5 0 1 1 0 3 1.5 1.5 0 0 1 0-3Z"/>
      </svg>
    <% end %>
  </div>
  <div class="w-64 flex flex-col items-center pb-10">
    <img class="w-24 h-24 mb-3 rounded-full shadow-lg" src="<%= user.get_picture %>" alt="Bonnie image"/>
    <h5 class="mb-1 text-xl font-medium text-gray-900 dark:text-white"><%= user.name %></h5>
  </div>
</div>